<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.ovgu.featureide.fm.ui.editors.FeatureModelEditor"
            contributorClass="de.ovgu.featureide.fm.ui.editors.featuremodel.FeatureModelEditorContributor"
            default="true"
            filenames="model.xml"
            icon="icons/featuretree.ico"
            id="de.ovgu.featureide.fm.ui.editors.GrammarEditor"
            name="Grammar Editor">
      </editor>
   </extension> 
   
   <extension
         point="org.eclipse.ui.views">
      <category
            id="FeatureIDE"
            name="FeatureIDE"/>
      <view
            category="FeatureIDE"
            class="de.ovgu.featureide.fm.ui.views.FeatureModelEditView"
            icon="icons/FeatureIconSmall.ico"
            id="de.ovgu.featureide.fm.ui.views.FeatureModelEditView"
            name="Feature Model Edits"/>
   </extension>
         
   <extension
         point="org.eclipse.ui.popupMenus"> 
      <objectContribution
            adaptable="true"
            id="de.ovgu.featureide.fm.ui.featureModelContribution"
            nameFilter="*.xml"
            objectClass="org.eclipse.core.resources.IFile">
         <menu id="de.ovgu.featureide.fm.ui_menue"
               label="FeatureIDE"
               icon="icons/FeatureIconSmall.ico"
               path="group.open"> 
               <separator name="slot1"/>
               <separator name="slot2"/>
               <separator name="slot3"/>
               <separator
                     name="slot4">
               </separator>
         </menu>     
         <action
               class="de.ovgu.featureide.fm.ui.actions.OpenWithGuidslAction"
               icon="icons/guidsl.gif"
               id="de.ovgu.featureide.fm.ui.openWithGuidsl"
               label="Open with GUIDSL"
               menubarPath="de.ovgu.featureide.fm.ui_menue/slot1"
               tooltip="GUIDSL is a configuration tool written by Don Batory">
         </action>
         <action
               class="de.ovgu.featureide.fm.ui.actions.ExportWaterlooAction"
               icon="icons/export_wiz.gif"
               id="de.ovgu.featureide.fm.ui.ExportWaterloo"
               label="Export model to Waterloo format"
               menubarPath="de.ovgu.featureide.fm.ui_menue/slot2">
         </action>
         <action
               class="de.ovgu.featureide.fm.ui.actions.ImportWaterlooAction"
               icon="icons/import_wiz.gif"
               id="de.ovgu.featureide.fm.ui.ImportWaterloo"
               label="Import model from Waterloo format"
               menubarPath="de.ovgu.featureide.fm.ui_menue/slot2">
         </action>
         <action
               class="de.ovgu.featureide.fm.ui.actions.ExportGuidslAction"
               icon="icons/export_wiz.gif"
               id="de.ovgu.featureide.fm.ui.ExportGuidsl"
               label="Export model to GUIDSL format"
               menubarPath="de.ovgu.featureide.fm.ui_menue/slot3">
         </action>
         <action
               class="de.ovgu.featureide.fm.ui.actions.ImportGuidslAction"
               icon="icons/import_wiz.gif"
               id="de.ovgu.featureide.fm.ui.ImportGuidsl"
               label="Import model from GUIDSL format"
               menubarPath="de.ovgu.featureide.fm.ui_menue/slot3">
         </action>
         <action
               class="de.ovgu.featureide.fm.ui.actions.ExportSiegmundAction"
               icon="icons/export_wiz.gif"
               id="de.ovgu.featureide.fm.ui.ExportSiegmund"
               label="Export model to Siegmund&apos;s format"
               menubarPath="de.ovgu.featureide.fm.ui_menue/slot4">
         </action>
      </objectContribution>
   </extension>
</plugin>
