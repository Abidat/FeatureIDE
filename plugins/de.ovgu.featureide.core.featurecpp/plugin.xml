<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.ovgu.featureide.core.composers">
      <composer
            class="de.ovgu.featureide.featurecpp.FeatureCppComposer"
            description="Composes C++ header files."
            id="de.ovgu.featureide.composer.featurecpp"
            name="FeatureC++"
            nature="FeatureIDE_Core.featureCPPNature">
      </composer>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="de.ovgu.featureide.core.featurecpp.addfcppcomposer"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="de.ovgu.featureide.featurecpp.AddFeatureCppComposer"
               id="de.ovgu.featureide.core.featurecpp.action1"
               icon="icons/FeatureIconSmall.ico"
               label="Add FeatureC++ Composer"
               menubarPath="group.open"
               style="push">
         </action>
      </objectContribution>
   </extension>

</plugin>
