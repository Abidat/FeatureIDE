<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension id="msplNature" name="Multi Software Product Line Nature" point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="de.ovgu.featureide.core.mspl.MSPLNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="de.ovgu.featureide.core.mspl.contribution1"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="de.ovgu.featureide.core.mspl.popup.actions.AddNatureAction"
               enablesFor="1"
               id="de.ovgu.featureide.core.mspl.AddNatureAction"
               label="Convert to Multi Software Product Line"
               menubarPath="de.ovgu.featureide.fm.ui.menu/interfaces3">
         </action>
         <visibility>
           <and>
             <objectState
                  name="nature"
                  value="de.ovgu.featureide.core.featureProjectNature">
             </objectState>
             <not>
               <objectState
                    name="nature"
                    value="de.ovgu.featureide.core.mspl.msplNature">
               </objectState>
             </not>
           </and>
         </visibility>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="de.ovgu.featureide.core.mspl.contribution2"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="de.ovgu.featureide.core.mspl.popup.actions.NewInterfaceAction"
               enablesFor="1"
               id="de.ovgu.featureide.core.mspl.NewInterfaceAction"
               label="Create new Interface"
               menubarPath="de.ovgu.featureide.fm.ui.menu/interfaces3">
         </action>
         <visibility>
           <and>
             <objectState
                  name="nature"
                  value="de.ovgu.featureide.core.featureProjectNature">
             </objectState>
	         <objectState
	              name="nature"
	              value="de.ovgu.featureide.core.mspl.msplNature">
	         </objectState>
           </and>
         </visibility>
      </objectContribution>
   </extension>

</plugin>
